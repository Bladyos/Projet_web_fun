{% extends "layout.html.twig" %}
{% block contenu %}



<form method="post" action="{{ path('panier.validFormAddPanier') }}">
    <div class="row">
        <fieldset>
            <legend>Ajouter un produit</legend>
            <img style="width:40px;height:40px" src="{{asset('images/')}}{{donnees.photo}}" >
            <label>Quantite :
                <input name="quantite"  type="text"  size="18" value="1" />
            </label>


            <input type="hidden" name="id" value="{{ donnees.id }}">
            <input type="hidden" name="nom" value="{{ donnees.nom }}">
            <input type="hidden" name="prix" value="{{ donnees.prix }}">
            <input type="hidden" name="typeProduit_id" value="{{ donnees.typeProduit_id }}">
            <input type="hidden" name="user_id" value="{{ donnees.user_id }}">

            <input type="submit" name="creerPanier" value="Ajouter" />

        </fieldset>
    </div>
</form>
{% endblock %}
